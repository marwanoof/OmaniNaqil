<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginPage" android:background="@drawable/mainbg">

    <ImageView
            android:layout_width="340dp"
            android:layout_height="311dp" app:srcCompat="@drawable/logomain"
            android:layout_alignParentTop="true" android:id="@+id/loginlogo" android:layout_marginTop="-30dp" android:layout_alignParentStart="true"
            android:layout_marginStart="94dp" android:layout_centerHorizontal="true"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/loginlogo" android:id="@+id/input_layout"
            android:layout_centerHorizontal="true" android:layout_marginTop="-20dp">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/emailEdit" android:hint="الإميل" android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/emailicon"
                    android:layout_marginRight="50dp" android:layout_marginLeft="50dp" android:fontFamily="@font/sky"
            />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="20dp">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/passEdit"
                    android:hint="كلمة المرور"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/passwordicon"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="@font/sky"
                    android:inputType="textPassword"/>
            <TextView
                    android:text="نسيت كلمة المرور؟"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/forget_pass" android:fontFamily="@font/sky"
                    android:layout_centerVertical="true" android:layout_marginLeft="50dp"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
            android:text="تسجيل الدخول"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="false"
            android:id="@+id/login_btn" android:background="@drawable/button_round_orang" android:fontFamily="@font/sky"
            android:textColor="@android:color/white" android:textSize="24sp" android:layout_below="@+id/input_layout"
            android:layout_marginTop="50dp" android:onClick="loginCheck"/>
    <TextView
            android:text="إنشاء حساب جديد"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="false"
            android:id="@+id/textView5" android:fontFamily="@font/sky" android:textSize="18sp"
            android:textColor="@color/garyBlue" android:layout_below="@+id/login_btn" android:layout_marginTop="20dp"
            android:onClick="newAccountAction"/>
</RelativeLayout>