<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutApp" android:background="@drawable/mainbg">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/menubar_layout">

        <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/title_bar_mainmenu"
                android:background="@color/garyBlue"
                android:layout_alignParentTop="true"
        />
        <TextView
                android:text="بركة"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:textColor="@android:color/white" android:textSize="24sp" android:fontFamily="@font/sky"
                android:layout_centerInParent="true"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/menulogo"
                android:layout_alignParentEnd="true"
                android:id="@+id/mainlogo" android:background="@android:color/transparent"
                android:layout_alignParentRight="true" android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/mainmenu"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:id="@+id/menu_profile"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:onClick="menuLeft"/>
    </RelativeLayout>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/barakahlogo" android:id="@+id/imageView"
            android:layout_below="@+id/menubar_layout" android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/imageView" android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:paddingRight="10dp" android:paddingLeft="10dp">
            <TextView
                    android:text="الرؤية:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:textSize="18sp" android:textStyle="bold" android:gravity="right"/>
            <TextView
                    android:text="أن يكون تطبيق الناقل العماني ( بركـــة ) الرائد الأول في مجال النقـــل البري اللــوجستـــــي.  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    android:textSize="18sp" android:textStyle="normal" android:gravity="right"/>
            <TextView
                    android:text="الرسالة:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView15"
                    android:textSize="18sp" android:textStyle="bold" android:gravity="right"/>
            <TextView
                    android:text="تمكين الناقلين العمانيين من إيجاد فـرص عــمل في مجال النقل البري اللوجستي وخلـق وظائف جديدة للباحثين عن عملفي القطاع اللوجستي."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textSize="18sp" android:textStyle="normal" android:gravity="right"/>
            <TextView
                    android:text="المميزات:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView20"
                    android:textSize="18sp" android:textStyle="bold" android:gravity="right"/>
            <TextView
                    android:text="- خاص بالناقل العماني فقط. ُ - مؤسسي المشروع عمانيون الجنسية. - عمل متكامل كمنظومة عمانية %100. "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView21"
                    android:textSize="18sp" android:textStyle="normal" android:gravity="right"/>
            <TextView
                    android:text="التعريف:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView22"
                    android:textSize="18sp" android:textStyle="bold" android:gravity="right"/>
            <TextView
                    android:text="هو عبارة عن تطبيـق يعمل بنظام الأندرويــد والأيفون ، يحتوي على طلب وعرض الطلب."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView23"
                    android:textSize="18sp" android:textStyle="normal" android:gravity="right"/>
            <TextView
                    android:text="- الطلب : يخص الشركات والأفراد الراغبـــــين بنقل حمولــــة من مكان إلى أخر، سواءكــان في داخل سلطنـة عمان أو خارجها."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView24"
                    android:textSize="18sp" android:textStyle="normal" android:gravity="right"/>
            <TextView
                    android:text="- العرض : يخــص الناقليـن العمانييــــن مالكين الشاحنات بأنفسهم و السائقيــن العمانييـــن في شركـــات نقل مملوكة لدى عمانييــن ."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView25"
                    android:textSize="18sp" android:textStyle="normal" android:gravity="right"/>
            <TextView
                    android:text="بحيث يوفر هذا التطبيق عمل للناقلين العمانيين بدعم حكومي وبدخل صافي يتراوح بين 1000 ريال إلى 1400 ريال عماني ، وفق دراسة أعدت لذلك."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView26"
                    android:textSize="18sp" android:textStyle="normal" android:gravity="right"/>
            <TextView
                    android:text="خصائص التطبيق:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView27"
                    android:textSize="18sp" android:textStyle="bold" android:gravity="right"/>
            <TextView
                    android:text="- يتيح مراقبة الحمولة منذ تحركها إلى وصولها. - تجهيز الناقلات بجهاز ضبط السرعة وجهاز تتبع GBS. - كاميرا مراقبة لتأكيد بأن الناقل عماني الجنسية. - توافر خطط بديلة لحالات الطوارئ."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView28"
                    android:textSize="18sp" android:textStyle="normal" android:gravity="right"/>
            <TextView
                    android:text="للتواصل:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView29"
                    android:textSize="18sp" android:textStyle="bold" android:gravity="right"/>
            <TextView
                    android:text="95443369 / 99550960"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView30"
                    android:textSize="18sp" android:textStyle="normal" android:gravity="right"/>
            <TextView
                    android:text="abualwarith0@gmail.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView31"
                    android:textSize="18sp" android:textStyle="normal" android:gravity="right"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>