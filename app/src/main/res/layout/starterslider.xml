<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/starter_layout"
                android:background="@color/org">


    <Button
            android:text="تخطي"
            android:layout_width="250px"
            android:layout_height="100px"
            android:id="@+id/skip_btn" android:fontFamily="@font/sky" android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp" android:background="@drawable/btnwhiteborder"/>
    <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title_starter" android:textSize="24sp"
            android:textColor="@android:color/white" android:layout_centerHorizontal="true"
            android:fontFamily="@font/sky" android:layout_below="@+id/img_starter" android:layout_marginTop="20dp"/>
    <TextView
            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/desc_starter" android:gravity="center"
            android:textColor="@android:color/white" android:fontFamily="@font/sky"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp" android:layout_below="@+id/title_starter"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/img_starter"
            android:layout_centerHorizontal="true" android:layout_marginTop="100dp"/>
    <Button
            android:text="إنشاء مستخدم جديد"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/newuser_starter"
            android:background="@drawable/button_bg" android:textColor="@android:color/white"
            android:fontFamily="@font/sky" android:paddingRight="10dp" android:paddingLeft="10dp"
            android:layout_below="@+id/desc_starter" android:layout_centerHorizontal="true"/>
</RelativeLayout>