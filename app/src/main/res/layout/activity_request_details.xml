<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RequestDetails" android:background="@drawable/mainbg">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/menubar_layout">

        <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/title_bar_mainmenu"
                android:background="@color/garyBlue"
                android:layout_alignParentTop="true"
        />
        <TextView
                android:text="الناقل العماني"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:textColor="@android:color/white" android:textSize="24sp" android:fontFamily="@font/sky"
                android:layout_centerInParent="true"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/mainlogo"
                android:layout_alignParentEnd="true"
                android:id="@+id/mainlogo" android:background="@android:color/transparent"
                android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/mainmenu"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:id="@+id/menu"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp" android:background="@drawable/paymentbox"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_marginTop="10dp"
            android:id="@+id/detail_lay" android:layout_below="@+id/menubar_layout">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center" android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/title_details_lay">
            <TextView
                    android:text="بيانات الطلب"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/title_final"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/sky" android:textColor="@color/garyBlue" android:textSize="24sp"/>
            <View
                    android:layout_width="200dp"
                    android:layout_height="5dp" android:id="@+id/view9" android:layout_weight="1"
                    android:background="@color/orgl"
                    android:layout_gravity="bottom" android:layout_below="@+id/title_final"
                    android:layout_centerHorizontal="true"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right" android:paddingRight="20dp" android:paddingLeft="20dp"
                android:layout_marginBottom="30dp" android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:gravity="right">
                <TextView
                        android:text="250 كم"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/type_final" android:layout_weight="1"
                        android:layout_marginRight="5dp" android:fontFamily="@font/sky" android:textColor="@color/org"
                        android:textSize="18sp"/>
                <TextView
                        android:text="نوع الحمولة:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="1"
                        android:fontFamily="@font/sky"
                        android:textColor="@color/garyBlue" android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:gravity="right" android:layout_marginRight="10dp">
                    <TextView
                            android:text="100 ريال عماني"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/price_final" android:layout_weight="1"
                            android:layout_marginRight="5dp" android:fontFamily="@font/sky"
                            android:textColor="@color/org"
                            android:textSize="18sp"/>
                    <TextView
                            android:text="السعر:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView18" android:layout_weight="1"
                            android:fontFamily="@font/sky"
                            android:textColor="@color/garyBlue" android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:gravity="right">
                    <TextView
                            android:text="20 طن"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/weight_final"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp" android:fontFamily="@font/sky"
                            android:textColor="@color/org"
                            android:textSize="18sp"/>
                    <TextView
                            android:text="الوزن:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView17" android:layout_weight="1"
                            android:fontFamily="@font/sky"
                            android:textColor="@color/garyBlue" android:textSize="18sp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:gravity="right" android:layout_marginTop="10dp">
                <TextView
                        android:text="قيد التوصيل"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/status_final" android:layout_weight="1"
                        android:layout_marginRight="5dp" android:fontFamily="@font/sky"
                        android:textColor="@color/org"
                        android:textSize="18sp"/>
                <TextView
                        android:text="حالة الطلب:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView171" android:layout_weight="1"
                        android:fontFamily="@font/sky"
                        android:textColor="@color/garyBlue" android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <Button
            android:text="تأكيد وصول الحمولة"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/confirm_detaile_btn"
            android:background="@drawable/button_round_red" android:paddingRight="10dp" android:paddingLeft="10dp"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" android:onClick="confirm" android:textColor="@android:color/white"/>
    <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/details_map" android:layout_below="@+id/detail_lay"
            android:layout_alignBottom="@+id/confirm_detaile_btn" android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp" android:layout_marginTop="10dp" android:layout_marginBottom="60dp"/>
</RelativeLayout>