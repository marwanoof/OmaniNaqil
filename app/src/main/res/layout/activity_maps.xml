<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical" android:background="@android:color/white">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="300dp"
              android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_marginTop="50dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="50dp"
            android:id="@+id/bottom_lay" android:layout_marginTop="10dp">
        <Button
                android:text="إلغاء"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cancel_map" android:layout_weight="1" android:background="@drawable/button_rec"
                android:textSize="24sp" android:fontFamily="@font/sky" android:layout_marginRight="10dp" android:gravity="center"
                android:textColor="@android:color/white" android:onClick="cancelBtn"/>
        <Button
                android:text="حفظ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/save_map" android:layout_weight="1" android:background="@drawable/button_rec"
                android:textSize="24sp" android:fontFamily="@font/sky" android:gravity="center" android:shadowColor="@android:color/black"
                android:textColor="@android:color/white" android:onClick="saveBtn"/>
    </LinearLayout>
</LinearLayout>
