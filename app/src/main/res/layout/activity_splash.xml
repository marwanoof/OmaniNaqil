<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Splash" android:layout_centerHorizontal="true" android:layout_centerVertical="true"
        android:gravity="center" android:background="@android:color/darker_gray">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cir1" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/cir1" android:layout_centerVertical="true"
            android:visibility="visible"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cir2"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/cir2"
            android:layout_centerVertical="true" android:visibility="visible"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cir3"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/cir3"
            android:layout_centerVertical="true" android:visibility="visible"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cir4"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/cir4"
            android:layout_centerVertical="true" android:visibility="visible"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cir5"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/cir5"
            android:layout_centerVertical="true" android:visibility="visible"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cir6" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/cir6" android:layout_centerVertical="true"
            android:visibility="visible"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logocir"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/logo" android:layout_centerVertical="true"
            android:visibility="visible"/>
</RelativeLayout>